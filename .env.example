# Environment Configuration Template
# Copy this file to .env and update with your settings

# ========================================
# Database Configuration
# ========================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=nethack_chat
POSTGRES_USER=nethack_user
POSTGRES_PASSWORD=changeme_in_production

# ========================================
# OpenAI Configuration
# ========================================

# Option 1: OpenAI API
OPENAI_API_ENDPOINT=https://api.openai.com/v1
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4

# Option 2: Azure OpenAI
# OPENAI_API_ENDPOINT=https://your-resource.openai.azure.com
# OPENAI_API_KEY=your-azure-key
# OPENAI_MODEL=gpt-4-deployment-name

# Option 3: Local LLM (Ollama)
# OPENAI_API_ENDPOINT=http://host.docker.internal:11434/v1
# OPENAI_API_KEY=not-needed
# OPENAI_MODEL=llama2

# Option 4: Local LLM (LM Studio)
# OPENAI_API_ENDPOINT=http://host.docker.internal:1234/v1
# OPENAI_API_KEY=not-needed
# OPENAI_MODEL=local-model

# LLM Parameters
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ========================================
# Service URLs (Docker internal network)
# ========================================
SIGNALR_API_URL=http://signalr-api:5000
LLM_PROXY_URL=http://llm-proxy:5001
MCP_SERVER_URL=http://mcp-server:5002

# ========================================
# CORS Configuration
# ========================================
# Development: Allow localhost
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# Production: Use your domain
# ALLOWED_ORIGINS=https://yourdomain.com

# ========================================
# Application Settings
# ========================================
ASPNETCORE_ENVIRONMENT=Development
# Production: Set to Production

# Logging Level
LOG_LEVEL=Information
# Options: Trace, Debug, Information, Warning, Error, Critical

# ========================================
# Feature Flags (Future)
# ========================================
ENABLE_STREAMING=false
ENABLE_DEBUG_LOGGING=true
ENABLE_SWAGGER=true

# ========================================
# Security (Production Only)
# ========================================
# JWT_SECRET=your-secret-key-minimum-32-characters
# ENCRYPTION_KEY=your-encryption-key-here

# ========================================
# Game Configuration
# ========================================
# Maximum conversation age in days before cleanup
MAX_CONVERSATION_AGE_DAYS=30

# Game difficulty multiplier
DIFFICULTY_MULTIPLIER=1.0

# Enable procedural generation (when implemented)
ENABLE_PROCEDURAL_GENERATION=false
